<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</H2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

  <div class="number">
    <span>会員ID</span>
    <span><%= @customer.id %></span>
  </div>

  <div class="field">
    <span>氏名</span>
    <span><%= f.text_field :last_name %></span>
    <span><%= f.text_field :first_name %></span>
  </div>

  <div class="field">
    <span>フリガナ</span>
    <span><%= f.text_field :last_name_kana %></span>
    <spna><%= f.text_field :first_name_kana %></spna>
  </div>

  <div class="field">
    <span><%= f.label :postal_code, "郵便番号" %></span>
    <span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></span>
  </div>

  <div class="field">
    <span><%= f.label :address, "住所" %></span>
    <span><%= f.text_area :address, autofocus: true, autocomplete: "address" %></span>
  </div>

  <div class="field">
    <span><%= f.label :telephone_number, "電話番号" %></span>
    <span><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></span>
  </div>

  <div class="field">
    <span><%= f.label :email, "メールアドレス" %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
    <span><%= f.label :is_deleted, "会員ステータス" %></span>
    <span><%= f.radio_button :is_deleted, "false" %></span>
    <span><%= f.label :is_deleted_false, "有効" %></span>

    <span><%= f.radio_button :is_deleted, "true" %></span>
    <span><%= f.label :is_deleted_true, "無効" %></span>
  </div>

  <div class="actions">
    <%= f.submit "変更を保存", class:"btn btn-success" %>
  </div>

<% end %>