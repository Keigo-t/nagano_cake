<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>

<div class="field">
  <span>会員ID</span>
  <span><%= @customer.id %></span>
</div>

<div class="field">
  <span>氏名</span>
  <span><%= @customer.last_name %><%= @customer.first_name %></span>
</div>

<div class="field">
  <span>フリガナ</span>
  <span><%= @customer.last_name_kana %><%= @customer.first_name_kana %></span>
</div>

<div class="field">
  <span>郵便番号</span>
  <span><%= @customer.postal_code %></span>
</div>

<div class="field">
  <span>住所</span>
  <span><%= @customer.address %></span>
</div>

<div class="field">
  <span>電話番号</span>
  <span><%= @customer.telephone_number %></span>
</div>

<div class="field">
  <span>メールアドレス</span>
  <span><%= @customer.email %></span>
</div>

<br>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success" %>
<%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
