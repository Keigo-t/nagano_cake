<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <p>ジャンル名</p>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class:"btn btn-success" %>
<% end %>

  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

<% @genres.each do |genres| %>
    <tbody>
      <tr>
        <td><%= genres.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genres.id) %></td>
      </tr>
    </tbody>
  </table>
<% end %>