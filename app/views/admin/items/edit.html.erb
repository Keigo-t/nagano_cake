<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-5">
      <br><h4>商品編集</h4>
    </div>
  </div>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品画像</p>
    </div>
    <div class="col-md-6">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品名</p>
    </div>
    <div class="col-md-6">
      <%= f.text_field :name %>
    </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品説明</p>
    </div>
    <div class="col-md-6">
      <%= f.text_area :introduction %>
    </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>ジャンル</p>
    </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>税抜価格</p>
    </div>
    <div class="col-md-6">
      <%= f.text_field :price %>
    </div>

    <br><%= f.submit '変更を保存', class:"btn btn-success" %>
<% end %>
</div>