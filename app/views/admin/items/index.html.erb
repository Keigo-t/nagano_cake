<div class="jumbotron">
  <h4>商品一覧</h4>
</div>
<%= link_to "+", new_admin_item_path %>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="row">商品ID</th>
      <th scope="row">商品名</th>
      <th scope="row">税抜価格</th>
    </tr>
  </thead>

  <% @item.each do |item| %>
    <tbody>
      <tr>
        <td><%= @item.id %></td>
        <td>
          <%= link_to admin_item_path(@item.id) do %>
          <%= item.name %>
          <% end %>
        </td>
        <td><%= @item.price %></td>
      </tr>
    </tbody>
  <% end %>
</table>