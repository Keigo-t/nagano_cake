<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-5">
      <br><h4>商品新規登録</h4>
    </div>
  </div>

<%= form_with model: @item, url: admin_items_path do |f| %>
  <br>
  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品画像</p>
    </div>
    <div class="col-md-6">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品名</p>
    </div>
    <div class="col-md-6">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>商品説明</p>
    </div>
    <div class="col-md-6">
      <%= f.text_area :introduction %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>ジャンル</p>
    </div>
    <div class="col-md-6">
      <p></p>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-3">
      <p>税抜価格</p>
    </div>
    <div class="col-md-6">
      <%= f.text_field :price %>
    </div>
  </div>

  <div class="row">
    <div class="offset-md-5 col-md-7">
      <br><%= f.submit '新規登録', class:"btn btn-success" %>
    </div>
  </div>
<% end %>
</div>