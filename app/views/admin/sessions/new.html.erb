<h4>管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <span><%= f.label :メールアドレス %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
    <span><%= f.label :パスワード %></span>
    <span><%= f.password_field :password, autocomplete: "current-password" %></span>
  </div>

  <%# if devise_mapping.rememberable? %>
    <!--<div class="field">-->
      <%#= f.check_box :remember_me %>
      <%#= f.label :remember_me %>
    <!--</div>-->
  <%# end %>
<br>
  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
