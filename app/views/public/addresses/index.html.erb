<h4>配送先登録/一覧</h4>

<%= form_with model: @address do |f| %>

<span><%= f.label :postal_code, "郵便番号" %></span>
<span><%= f.text_field :postal_code %></span>

<span><%= f.label :address, "住所" %></span>
<span><%= f.text_area :address %></span>

<span><%= f.label :name, "宛名" %></span>
<span><%= f.text_field :name %></span>

<%= f.submit "新規登録", class:"btn btn-success" %>

<% end %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
        <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>