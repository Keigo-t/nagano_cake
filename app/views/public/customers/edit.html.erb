<div class="container">
  <div class="row">
    <div class="col-4">
      <h3 class="bg-light d-inline-block m-5">会員情報編集</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-8">
      <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>

        <div class="field">
          <span class="mr-5">氏名</span>
          <span><%= f.text_field :last_name %></span>
          <spna><%= f.text_field :first_name %></spna>
        </div>

        <div class="field">
          <span class="mr-3 mt-2">フリガナ</span>
          <span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></span>
          <spna><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></spna>
        </div>

        <div class="field">
          <span class="mr-3"><%= f.label :postal_code, "郵便番号" %></span>
          <span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></span>
        </div>

        <div class="field">
          <span class="mr-5"><%= f.label :address, "住所" %></span>
          <span><%= f.text_area :address, autofocus: true, autocomplete: "address" %></span>
        </div>

        <div class="field">
          <span class="mr-3"><%= f.label :telephone_number, "電話番号" %></span>
          <span><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></span>
        </div>

        <div class="field">
          <span><%= f.label :email, "メールアドレス" %></span>
          <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
        </div>

        <div class="actions m-3">
          <%= f.submit "編集内容を保存", class:"btn btn-success" %>
          <%= link_to "退会する", customers_unsubscribe_path, class:"btn btn-danger" %>
        </div>

        <% end %>
    </div>
  </div>
</div>