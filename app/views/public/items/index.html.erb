<div class="container">
  <div class="row">
    <div class="col-3">
      <p>検索</p>
    </div>

    <div class="col-9">
      <h4>商品一覧（全<%= @count %>件）</h4>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(150,80) %>
            <% end %>
            <p><%= item.name %></p>
            <p><%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
