<h4>注文履歴一覧</h4>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.order.created_at %></td>
      <td>
        <%= order_detail.order.address %><br>
        <%= order_detail.order.name %>
      </td>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.order.total_payment %>円</td>
      <td><%= link_to "表示する", order_path(order_detail.id), class:"btn btn-primary" %></td>
    </tr>
    <% end %>
  </tbody>
</table>