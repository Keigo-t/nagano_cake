<h3>注文情報入力</h3>

<h4>支払方法</h4>
  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method_credit_card, "クレジットカード" %>
  <br>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method_tarnsfer, "銀行振込" %>
<br><br>
<h4>お届け先</h4>
  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %>
  <br><%= current_customer.address %>
  <br>
  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "登録済住所から選択" %><br>
  <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
  <br>
  <%= f.radio_button :address_number, 3 %>
  <%= f.label :address_number_3, "新しいお届け先" %>
  <br>
    <%= f.label :postal_code, "郵便番号" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  <br>
    <%= f.label :address, "住所" %>
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
  <br>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %>

  <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>

<% end %>
