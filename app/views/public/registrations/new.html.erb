<div class="container">
  <div class="row">
    <div class="offset-md-1 col-md-5">
      <h2>新規会員登録</h2>
    </div>

      <%= form_with model:@customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="offset-md-3 col-md-3">
            <p>名前</p>
            </div>
          <span><%= f.label :last_name, "(姓)" %></span>
          <span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></span>
          <span><%= f.label :first_name, "(名)" %></span>
          <span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></span>
        </div>

        <div class="field">
          <span>フリガナ</span>
          <span><%= f.label :last_name_kana, "(セイ)" %></span>
          <span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></span>
          <span><%= f.label :first_name_kana, "(メイ)" %></span>
          <span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></span>
        </div>

        <div class="field">
          <span><%= f.label :email %></span>
          <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
        </div>

        <div class="field">
          <span><%= f.label :postal_code, "郵便番号" %></span>
          <span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></span>
        </div>

        <div class="field">
          <span><%= f.label :address, "住所" %></span>
          <span><%= f.text_area :address, autofocus: true, autocomplete: "address" %></span>
        </div>

        <div class="field">
          <span><%= f.label :telephone_number, "電話番号（ハイフンなし）" %></span>
          <span><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></span>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(6文字以上)" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>

      <h2>既に登録済みの方</h2>
      <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>